        <classes>
            <class name="com.lambda.test.TestClass">
                <methods>
                    <include name="moduleInputForms"/>
                    <include name="RangeSlider"/>
                    <include name="inputFormValidation"/>
                </methods>
            </class>
        </classes>
    </test>

    <test verbose="2" preserve-order="true"
          name="internet explorer">
        <parameter name="browser" value="internet explorer"></parameter>
        <parameter name="version" value="11.0"></parameter>
        <parameter name="Platform" value="Windows 10"></parameter>
        <classes>
            <class name="com.lambda.test.TestClass">
                <methods>
                    <include name="moduleInputForms"/>
                    <include name="RangeSlider"/>
                    <include name="inputFormValidation"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>